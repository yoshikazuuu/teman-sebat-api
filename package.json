{
  "name": "teman-sebat-api",
  "scripts": {
    "dev": "bun run src/server.ts",
    "build": "bun build src/server.ts --outdir dist --target bun",
    "start": "bun run dist/server.js",
    "dev:watch": "bun --watch src/server.ts",
    "db:migrate": "bun drizzle-kit migrate --config=drizzle.local.config.ts",
    "db:generate": "bun drizzle-kit generate --config=drizzle.local.config.ts",
    "db:init": "./scripts/init-db.sh",
    "db:studio": "bun drizzle-kit studio --config=drizzle.local.config.ts",
    "docker:build": "docker build -t teman-sebat-api .",
    "docker:run": "docker run -p 3000:3000 teman-sebat-api"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.3",
    "@hono/zod-validator": "^0.5.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "hono": "^4.7.8",
    "jose": "^6.0.10",
    "node-apn": "^3.0.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.15.3",
    "drizzle-kit": "^0.31.0",
    "typescript": "^5.8.3"
  },
  "type": "module"
}